package javaSandboxOneLevelOne;

import java.io.File;
import java.io.IOException;

/** @author Table **/

public class FileClass 
	{
		public static void main(String[] args) throws IOException 
			{
				File $File = new File("src/javaSandboxOneLevelOne/File.txt");
				String $Type = null;
				if ($File.exists())
					{
						if ($File.isDirectory())
							{
								$Type = "Directories";
							}
						else if ($File.isFile())
							{
								$Type = "Files";
							}
						System.out.println("\n\t"+$Type+" absolute path: ("+$File.getAbsolutePath()+")");
						System.out.println("\tHashcode: "+$File.hashCode());
						System.out.println("\tName: "+$File.getName());
						System.out.println("\tParent: "+$File.getParent());
						System.out.println("\tHidden file: "+$File.isHidden());
						System.out.println("\tWritable file: "+$File.canWrite());
						System.out.println("\tReadable file: "+$File.canRead());
						System.out.println("\tExecutable file: "+$File.canExecute());
						
					}
				else			
					{
						System.out.println("\n\tThe file or directory "+$File+" does not exsist.");
						File $FileClass = new File("src/javaSandboxOneLevelOne/FileClass");
						$FileClass.createNewFile();
					}
			}
	}
