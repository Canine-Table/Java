package javaSandboxOneLevelOne;

import java.io.File;

/** @author Table **/

public class FileClass 
	{
		public static void main(String[] args) 
			{
				File $File = new File("src/javaSandboxOneLevelOne/File.txt");
				String $Type = null;
				if ($File.exists())
					{
						if ($File.isDirectory())
							{
								$Type = "Directory";
							}
						else if ($File.isFile())
							{
								$Type = "File";
							}
						System.out.println();
							
						System.out.println("\n\tThis "+$Type+" absolute path is located at: \n\n\t("+$File.getAbsolutePath()+")");
				
					}
				else			
					{
						System.out.println("\n\tThe file or directory "+$File+" does not exsist.");
					}
			}
	}
