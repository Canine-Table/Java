package javaSandboxOneLevelOne;

import java.io.File;

/** @author Table **/

public class FileClass 
	{
		public static void main(String[] args) 
			{
				File $File = new File("src/javaSandboxOneLevelOne/File.txt");
				String $Type = null;
				if ($File.exists())
					{
						if ($File.isDirectory())
							{
								$Type = "Directory";
							}
						else if ($File.isFile())
							{
								$Type = "File";
							}
						System.out.println("\n\tThis "+$Type+" absolute path is located at: \n\n\t("+$File.getAbsolutePath()+")");
						System.out.println("\n\tFile Info");
						System.out.println("\n\tHidden file: "+$File.isHidden());
						System.out.println("\n\tWritable file: "+$File.canWrite());
						System.out.println("\n\tReadable file: "+$File.canRead());
						System.out.println("\n\tHashcode: "+$File.hashCode());
						System.out.println("\n\tName: "+$File.getName());
						System.out.println("\n\tParent: "+$File.getParent());
						System.out.println("\n\tExecutable file: "+$File.canExecute());

				
					}
				else			
					{
						System.out.println("\n\tThe file or directory "+$File+" does not exsist.");
					}
			}
	}
